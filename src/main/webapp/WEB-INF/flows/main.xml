<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
      start-state="main">

    <view-state id="main">
        <transition on="searchByText">
            <evaluate expression="newsrussiaFacade.searchJournalsByText()" />
        </transition>

        <transition on="issue" to="journalissue"/>

    </view-state>


   <view-state id="journalissue" view="../views/journalissue.xhtml">

   </view-state>
    <subflow-state id="journalissueFlow" subflow="journal-issue.xml">

    </subflow-state>


</flow>
